<launch>
  <arg name="paused" default="false" />
  <arg name="gazebo_gui" default="true" />
  <arg name="urdf_path" default="$(find mecademic_description)/urdf/meca_500_r3.urdf.xacro" />

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find gazebo_plugin)/worlds/world.world" />
    <arg name="verbose" value="false" />
    <!-- more default parameters can be changed here -->
  </include>

  <!-- send robot urdf to param server -->
  <param name="robot_description" textfile="$(arg urdf_path)" />

  <!-- push robot_description to factory and spawn robot in gazebo at the origin, change x,y,z arguments to spawn in a different position -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -x 0 -y 0 -z 0" respawn="false" output="screen" />

  <include file="$(find meca_500_moveit_config)/launch/ros_controllers.launch" />

</launch>