<?xml version="1.0"?>
<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find meca_500_moveit_config)/config/ros_controllers.yaml" command="load"/>

  <!-- Load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" ns="/meca_500_r3" respawn="false"
    output="screen" 
    args="--namespace=/meca_500_r3 
    joint_state_controller 
    arm_position_controller 
    --timeout 20"/>

</launch>
